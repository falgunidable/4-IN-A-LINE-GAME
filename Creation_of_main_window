import tkinter as tk


LARGE_FONT= ("Verdana", 12,"bold")


class First_Window(tk.Tk):

    def __init__(self):
        
        tk.Tk.__init__(self)
        window = tk.Frame(self)
        
        size=tk.Frame(window,width=600,height=600)
        size.grid()
        
        window.pack()

        self.frames = {}

        for i in (StartPage, PageOne, PageTwo):

            frame = i(window, self)

            self.frames[i] = frame

            frame.grid(row=0, column=0, sticky="nsew")

        self.show_frame(StartPage)

    def show_frame(self, cont):

        frame = self.frames[cont]
        frame.tkraise()

        
class StartPage(tk.Frame):

    def __init__(self, parent, controller):
        tk.Frame.__init__(self,parent)
        label = tk.Label(self, text="\n\n\n\nWelcome to 4 IN A LINE Game", font=LARGE_FONT)
        label.pack()

        button = tk.Button(self, text="START",
                            command=lambda: controller.show_frame(PageOne),width=10,height=1,bg="black",fg="yellow")
        button.place(x=210,y=300)

        button2 = tk.Button(self, text="QUIT",
                            command=controller.destroy,width=10,height=1,bg="black",fg="yellow")
        button2.place(x=310,y=300)
        
        button3 = tk.Button(self, text="INSTRUCTIONS",
                            command=lambda: controller.show_frame(PageTwo),width=15,height=1,bg="black",fg="yellow")
        button3.place(x=240,y=350)


class PageOne(tk.Frame):

    def __init__(self, parent, controller):
        tk.Frame.__init__(self, parent)
        label = tk.Label(self, text="\nTHE GAME", font=LARGE_FONT)
        label.pack()

        button1 = tk.Button(self, text="Back to Home",
                            command=lambda: controller.show_frame(StartPage))
        button1.pack()

        
class PageTwo(tk.Frame):

    def __init__(self, parent, controller):
        tk.Frame.__init__(self, parent)
        label = tk.Label(self, text="\n\nINSTRUCTIONS\n\n", font=LARGE_FONT)
        label.pack()
        
        label = tk.Label(self, text="\n\n-Each player is assigned with 21 checkers each\n-Each player may drop only one checker into the grid per turn.\n-	A winner is declared when one player gets four of their colored checkers in a row vertically, horizontally or diagonally.\n-Other configurations, such as squares, donâ€™t count as winning combinations. The game is declared a stalemate or tie if the whole grid gets filled and nobody has four in a row.\n\n", font=("Bookman Old Style",8,'bold'),anchor=N,justify=CENTER)
        label.pack(padx=5)

        button1 = tk.Button(self, text="Back to Home",
                            command=lambda: controller.show_frame(StartPage))
        button1.pack()


app = First_Window()
app.mainloop()
